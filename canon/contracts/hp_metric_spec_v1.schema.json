{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hp-engine.local/contracts/HP_METRIC_SPEC_V1.schema.json",
  "title": "HP_METRIC_SPEC_V1",
  "type": "object",
  "required": ["contract_id", "properties"],
  "properties": {
    "contract_id": { "const": "HP_METRIC_SPEC_V1" },
    "properties": {
      "type": "object",
      "required": ["metric_id", "derivation", "logic_method", "polarity", "citations", "scopes"],
      "properties": {
        "metric_id": { "type": "string", "minLength": 1 },
        "derivation": {
          "type": "object",
          "required": ["requires_signals", "requires_metrics", "fallback"],
          "properties": {
            "requires_signals": { "type": "array", "items": { "type": "string" } },
            "requires_metrics": { "type": "array", "items": { "type": "string" } },
            "fallback": { "type": ["string", "null"] }
          },
          "additionalProperties": false
        },
        "logic_method": {
          "type": "string",
          "enum": ["markov_chain", "logistic_regression", "sum_aggregate", "threshold_gate"]
        },
        "polarity": {
          "type": "string",
          "enum": ["higher_is_better", "lower_is_better", "neutral"]
        },
        "citations": {
          "type": "object",
          "required": ["supporting_definition", "validation_method"],
          "properties": {
            "supporting_definition": { "type": "array", "items": { "type": "string" } },
            "validation_method": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        },
        "scopes": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}